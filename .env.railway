# Railway Deployment Configuration

# Database
POSTGRESQL_URL=${{RAILWAY_POSTGRESQL_URL}}
DATABASE_URL=${{RAILWAY_POSTGRESQL_URL}}

# Application
NODE_ENV=production
PORT=${{PORT}}

# Security
JWT_SECRET=sbv-railway-production-secret-2025-ultra-secure

# File Upload (Railway has persistent storage)
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# CORS Origins (update after deployment)
CORS_ORIGINS=https://sbv-professional-app-production.railway.app,https://localhost:3000

# Admin Defaults
ADMIN_EMAIL=superadmin@digitale-rakete.ch
ADMIN_PASSWORD=admin2025

# Database Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
